<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"> <!--IMPORTANT otherwise backgrnd img. will not fill the whole screen -->

    <ImageView
        android:id="@+id/FragPostImagePost"
        android:layout_width="match_parent"
        android:layout_height="269dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/FragPostImageUser"
            android:layout_width="66dp"
            android:layout_height="58dp"
            tools:src="@tools:sample/avatars" />

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/FragPostUsername"
            android:layout_width="151dp"
            android:layout_height="36dp"
            android:text="TextView"
            android:textSize="25dp" />

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.chip.Chip
            android:id="@+id/FragPostChipCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

    </LinearLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/FragPostMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="364dp"
        android:layout_height="368dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FragPostImagePost"
        map:cameraZoom="10"
        map:uiRotateGestures="true"
        map:uiZoomControls="true"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/FragPostTextDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="25dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/FragPostMap"
        app:layout_constraintTop_toBottomOf="@+id/FragPostImagePost"
        tools:layout_editor_absoluteX="34dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
