<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".navigation.fragments.SettingFragment">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:cardCornerRadius="50dp">
            <ImageView
                android:id="@+id/frag_setting_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                tools:src="@tools:sample/avatars"
                android:src="@drawable/img_avatar_layer_f" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/frag_setting_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="username"
            android:layout_margin="15dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:id="@+id/frag_setting_lan_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Language"
                    />
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/frag_setting_lan_chipgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    app:chipSpacingHorizontal="5dp"
                    app:selectionRequired="true"
                    app:singleSelection="true"
                    >
                    <com.google.android.material.chip.Chip
                        android:id="@+id/frag_setting_language_ing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Ingles" />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/frag_setting_language_esp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Español" />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/frag_setting_language_deu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Aleman" />
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:id="@+id/frag_setting_theme_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Tema"
                    />
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/frag_setting_theme_chipgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    app:chipSpacingHorizontal="5dp"
                    app:selectionRequired="true"
                    app:singleSelection="true">
                    <com.google.android.material.chip.Chip
                        android:id="@+id/frag_setting_theme_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Claro" />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/frag_setting_theme_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Oscuro" />

                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:id="@+id/frag_setting_pass_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Contraseña"
                    />

                <!-- Campo de entrada de contraseña con TextInputLayout -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fragSettLayoutPass1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:endIconMode="password_toggle">
                    <EditText
                        android:id="@+id/fragSettFormPass1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:hint="@string/passwordForm"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo de confirmación de contraseña con TextInputLayout -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fragSettLayoutPass2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:endIconMode="password_toggle">
                    <EditText
                        android:id="@+id/fragSettFormPass2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:hint="@string/passwordForm2"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/frag_setting_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/frag_setting_signOut"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ico_logout"
                        tools:src="@drawable/ico_logout" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
