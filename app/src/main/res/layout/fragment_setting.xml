<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".navigation.fragments.SettingFragment"
        android:layout_margin="15dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:cardCornerRadius="100dp"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/frag_setting_user_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@tools:sample/avatars"
                android:src="@drawable/img_avatar_layer_f" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/frag_setting_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="username"
            android:layout_margin="15dp"/>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/frag_setting_lan_title"
                android:textSize="18sp"
                android:text="Language"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/frag_setting_lan_chipgroup"
                android:layout_height="match_parent"
                android:clickable="false"
                app:chipSpacingHorizontal="10dp"
                app:selectionRequired="true"
                app:singleSelection="true"
                android:layout_weight="2"
                android:layout_width="0dp">
                <com.google.android.material.chip.Chip
                    android:id="@+id/frag_setting_language_ing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Ingles" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/frag_setting_language_esp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Español" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/frag_setting_language_deu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Aleman" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:textSize="18sp"
                android:text="Tema"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/frag_setting_theme_chipgroup"
                android:layout_height="match_parent"
                android:clickable="false"
                app:chipSpacingHorizontal="10dp"
                app:selectionRequired="true"
                app:singleSelection="true"
                android:layout_weight="2"
                android:layout_width="0dp">
                <com.google.android.material.chip.Chip
                    android:id="@+id/frag_setting_theme_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Claro" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/frag_setting_theme_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Oscuro" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Contraseña"
            android:layout_gravity="start"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:endIconMode="password_toggle">
            <EditText
                android:id="@+id/frag_setting_pass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="@string/passwordForm"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:endIconMode="password_toggle">
            <EditText
                android:id="@+id/frag_setting_pass2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="@string/passwordForm2"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/frag_setting_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"/>
            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/frag_setting_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LogOut"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
