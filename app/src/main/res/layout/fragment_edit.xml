<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="true"
        android:gravity="bottom|center_horizontal|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:orientation="horizontal" >
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/FragEditChipCat_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                app:chipSpacingHorizontal="10dp"
                app:selectionRequired="true"
                app:singleSelection="true"
                >

                    <com.google.android.material.chip.Chip
                        android:id="@+id/FragEditCat_adoption"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/adoption"
                        android:tag="adoption"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/FragEditCat_lost"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lost"
                        android:tag="lost"/>


                    <com.google.android.material.chip.Chip
                        android:id="@+id/FragEditCat_found"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/found"
                        android:tag="found"/>


                    <com.google.android.material.chip.Chip
                        android:id="@+id/FragEditCat_couple"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/couple"
                        android:tag="couple"/>
                </com.google.android.material.chip.ChipGroup>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/FragEditSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                android:backgroundTint="@color/fui_bgTwitter"
                android:layout_marginLeft="7dp"
                android:clickable="true"
                />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp">
            <ImageView
                android:id="@+id/FragEditPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                tools:src="@tools:sample/avatars"
                android:src="@drawable/ic_add_photo_foreground" />
        </androidx.cardview.widget.CardView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:counterEnabled="true"
            app:counterMaxLength="140">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/FragEditDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripcion" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicacion"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            >
            <com.google.android.gms.maps.MapView
                android:id="@+id/FragEditMap"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@android:color/darker_gray"
                app:cameraZoom="10"
                app:uiRotateGestures="true"
                app:uiZoomControls="true"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/FragEditBtnSave"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginRight="3dp"/>
            <Button
                android:id="@+id/FragEditBtnDelete"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>