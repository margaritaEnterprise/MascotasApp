<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:visibility="visible"
    tools:context=".signup.fragments.RegisterUserFragment">
    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/loginForm"
        android:layout_width="381dp"
        android:layout_height="503dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_edittext_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/registerTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_step2"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="34sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:paddingTop="0dp">

            <EditText
                android:id="@+id/regNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                style="@style/RoundedBlueEditText"
                android:hint="@string/regnameForm"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:paddingTop="0dp">


            <EditText
                android:id="@+id/regBirthdayInput"
                style="@style/RoundedBlueEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:hint="@string/regBirthdayForm"/>
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/regUserButton"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="@string/btnFinish"
            android:textAlignment="gravity" />

    </LinearLayout>
</FrameLayout>